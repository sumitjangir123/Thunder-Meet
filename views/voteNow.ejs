<body>
     <!-- <span class="ip" style="font-family: cursive;"></span> -->
     <p class="ip"></p>
     <div class="btn m-0" style="text-align: center; width: 100%; font-size: 15px;"><%=poll.title%></div>
    <form action="/poll/voting/<%=id%>" method="POST">
        <div style="text-align: center; justify-content: center; border: 1px solid black; background-color: gainsboro;" class="p-3 m-3 z-depth-3">
            <div style="width: 90%; text-align: left; display: inline-block; font-size: 15px;" class="btn bg-info">
                <%var x=0%>
                <%for(i of poll.choices){%>
                    <div class="mt-3">
                        <input type="checkbox" name="<%=x%>"> &nbsp;
                        <%=i.content%>
                    </div>
                    <%x++%>
                <%}%>
                <input type="hidden" id="para" name="ip">
            </div>
        </div>
       <center>
        <input type="submit" class="btn bg-primary">
       </center>
    </form>
</body>

<script>

    $.getJSON("https://api.ipify.org?format=json", 
        function(data) {
            document.getElementById("para").value=data.ip;
        })
</script>